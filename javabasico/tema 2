
package com.bootcamp;

public class Funciones {
//creamos metodo main
    public static void main(String[] args) {
        //Funciones
        double precioTotal=precioConIva(1000, 0.15);
        System.out.println("El precio a pagar es :" + precioTotal);
    }
    static double
    precioConIva(int precio, double iva){
        return  (precio * iva)+precio;
    }
}
